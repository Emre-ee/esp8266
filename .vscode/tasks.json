{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        
        {
            "label": "Delete build folder",
            "type": "cppbuild",
            "command": "./delete_build.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/project"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Configure project",
            "type": "cppbuild",
            "dependsOrder": "sequence",
            "dependsOn":["Delete build folder"], 
            "command": "cmake",
            "args": [
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-DCMAKE_BUILD_TYPE:STRING=Debug",
                "-DUNIT_TEST:STRING=ON",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-S${workspaceFolder}/project",
                "-B/${workspaceFolder}/project/build",

            ],
            "options": {
                "cwd": "${workspaceFolder}/project"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Configure app project",
            "type": "cppbuild",
            "dependsOrder": "sequence",
            "dependsOn":["Delete build folder"], 
            "command": "cmake",
            "args": [
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-DCMAKE_BUILD_TYPE:STRING=Debug",
                "-DUNIT_TEST:STRING=OFF",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE",
                "-S${workspaceFolder}/project",
                "-B${workspaceFolder}/project/build"


            ],
            "options": {
                "cwd": "${workspaceFolder}/project"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build project",
            "type": "cppbuild",
            "dependsOrder": "sequence",
            "dependsOn":["Configure project"],
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/project/build"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build app project",
            "type": "cppbuild",
            "dependsOrder": "sequence",
            "dependsOn":["Configure app project"],
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/project/build"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run unit test",
            "type": "cppbuild",
            "dependsOrder": "sequence",
            "dependsOn":["Build project"],
            "command": "./unit_test/unitTest",
            "args": ["--gtest_color=yes"],
            "options": {
                "cwd": "${workspaceFolder}/project/build"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run app",
            "type": "cppbuild",
            "dependsOrder": "sequence",
            "dependsOn":["Build app project"],
            "command": "./app/esp8266",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/project/build"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}